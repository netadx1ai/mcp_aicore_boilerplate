# NetADX AI-CORE - Environment Configuration Template
# ====================================================
# Copy this file to .env and configure with your actual values

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=development
PORT=8005
HOST=0.0.0.0

# Use HTTP transport (true) or stdio transport (false)
USE_HTTP=true

# =============================================================================
# MongoDB Configuration
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/netadx_aicore

# Or use detailed configuration:
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE_NAME=netadx_aicore
MONGODB_USER=
MONGODB_USER_PWD=
MONGODB_AUTH_DATABASE=admin

# Connection Pool
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=5

# =============================================================================
# Authentication Configuration
# =============================================================================
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRES_IN=24h
JWT_ALGORITHM=HS256

# MCP API Key Authentication (Bearer Token)
# Comma-separated list of valid API keys for Bearer token authentication
# Example: MCP_API_KEYS=key1,key2,key3
# Leave empty to disable API key authentication (JWT only)
# Generate keys using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
MCP_API_KEYS=

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/netadx-aicore/app.log

# =============================================================================
# Development/Debug
# =============================================================================
DEBUG_MODE=false
ENABLE_SWAGGER=true
